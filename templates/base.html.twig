{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="generator" content="">

        <title>{% block title %}Tasks{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css', 'bootstrap') }}" rel="stylesheet">
            <link href="{{ asset('font/bootstrap-icons.min.css', 'bootstrap-icon') }}" rel="stylesheet">
        {% endblock %}
        {% block javascripts_header %}{% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header class="mb-3">
            <nav class="navbar navbar-expand-lg bg-body-secondary bg-gradient">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_task_index') }}">
                        <i class="bi bi-clipboard2"></i> Tasks
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Navigation menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    {% include '_menu.html.twig' %}
                </div>
            </nav>
            <nav aria-label="breadcrumb" class="shadow border-bottom bg-body-tertiary bg-gradient" style="--bs-breadcrumb-divider: '>';">
                <ol class="breadcrumb m-0 p-2">
                    <li class="breadcrumb-item"><a href="{{ path('app_task_index') }}" class="text-decoration-none"><i class="bi bi-house"></i> {{ 'home'|trans({},'label') }}</a></li>
                        {% block breadcrumb %}{% endblock %}
                </ol>
            </nav>
        </header>
        <main class="mb-3">
            {% include '_flash.html.twig' %}
            <div class="container-fluid">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="mt-auto">
            <nav class="navbar navbar-expand-lg sticky-bottom bg-gradient shadow border-top">
                <div class="container-fluid justify-content-end">
                    <div class="text-end">
                        <small><i class="bi bi-bookmark"></i> {{ 'version'|trans({},'label') }}: {{ app.request.server.get('APP_VERSION') }}</small>
                    </div>
                </div>
            </nav>
        </footer>
        {% block javascripts_footer %}
            <script src="{{ asset('jquery.min.js', 'jquery') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js', 'bootstrap') }}"></script>
        {% endblock %}
    </body>
</html>
